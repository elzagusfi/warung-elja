@model WarungElja.Models.LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warung Elja</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WarungElja.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-image: url('/images/loginpage.PNG');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-overlay {
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            width: 100%;
            max-width: 320px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .form-signin {
            width: 100%;
            padding: 10px;
        }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="text"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

        .b-example-divider {
            display: none;
        }

        .login-logo {
            text-align: center;
            margin-bottom: 1rem;
        }

        .login-logo h1 {
            color: white;
            font-weight: 600;
            font-size: 2rem;
            letter-spacing: 1px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: 6px;
            padding: 10px 12px;
            font-family: 'Poppins', sans-serif;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            color: #333;
            height: 42px;
        }

        .form-control:focus {
            background-color: white;
            box-shadow: 0 0 0 0.2rem rgba(100, 175, 255, 0.25);
            border-color: #64afff;
        }

        .form-label {
            color: #333;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .btn-login {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            border: none;
            border-radius: 6px;
            padding: 10px;
            font-weight: 600;
            font-size: 1rem;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(37, 117, 252, 0.3);
            color: white;
            height: 42px;
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(37, 117, 252, 0.4);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .text-muted {
            color: #333 !important;
            font-size: 0.8rem;
        }

        .form-check-input:checked {
            background-color: #6a11cb;
            border-color: #6a11cb;
        }

        .form-check-label {
            color: #333;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .text-danger {
            color: #ff4757 !important;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .login-title {
            color: #e1dbdb;
            font-weight: 600;
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 1.2rem;
            border: none !important;
            outline: none !important;
            box-shadow: none !important;
            background: none !important;
            padding-bottom: 0 !important;
            margin-bottom: 1.5rem !important;
        }

        h1 {
            border: none !important;
            outline: none !important;
            box-shadow: none !important;
            background: none !important;
        }

        * {
            box-sizing: border-box;
        }

        hr {
            display: none !important;
        }

        .form-signin hr {
            display: none !important;
        }

        .validation-summary-errors {
            display: none;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }

        .validation-summary-errors li {
            list-style-type: none;
            position: relative;
        }

        .validation-summary-errors li:before {
            content: "âš  ";
            position: absolute;
            left: -20px;
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .checkbox {
            margin-bottom: 1.2rem;
        }

        .mt-4 {
            margin-top: 1rem !important;
        }

        .mb-3 {
            margin-bottom: 1rem !important;
        }
    </style>
</head>
<body>
    <div class="login-overlay">
        <main class="form-signin">
            <h1 class="login-title">Sign In</h1>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="validation-summary-errors" style="display: none;"></div>

                <div class="form-floating">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <label asp-for="Username" class="form-label">Username</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="RememberMe" class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <button class="w-100 btn btn-login" type="submit">Sign In</button>
                <p class="mt-4 mb-3 text-muted text-center">&copy; 2025 Warung Elja</p>
            </form>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function() {
            // Hanya tampilkan validation summary jika ada error
            if ($('.validation-summary-errors ul li').length > 0) {
                $('.validation-summary-errors').show();
            } else {
                $('.validation-summary-errors').hide();
            }
        });
    </script>
</body>
</html>