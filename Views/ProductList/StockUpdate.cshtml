@model WarungElja.Models.StockUpdateViewModel

@{
    ViewData["Title"] = "Update Stock";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Update Stock</h1>
</div>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Product: @Model.ProductName</h5>
            </div>
            <div class="card-body">
                <form asp-action="StockUpdate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdProductDetails" />
                    <div class="form-group mb-3">
                        <label class="form-label">Current Stock</label>
                        <input asp-for="CurrentStock" class="form-control" readonly />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AddStock" class="form-label"></label>
                        <input asp-for="AddStock" class="form-control" placeholder="Enter quantity to add" />
                        <span asp-validation-for="AddStock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Stock
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}