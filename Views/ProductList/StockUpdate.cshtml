@model WarungElja.Models.StockUpdateViewModel

@{
    ViewData["Title"] = "Update Stock";
}

<h1>Update Stock</h1>

<h4>Product: @Model.ProductName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StockUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProductDetails" />
            <div class="form-group mb-3">
                <label class="control-label">Current Stock</label>
                <input asp-for="CurrentStock" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="AddStock" class="control-label"></label>
                <input asp-for="AddStock" class="form-control" />
                <span asp-validation-for="AddStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Stock" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}