@model WarungElja.Models.ProductDetails

@{
    ViewData["Title"] = "Deactivate Product";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Deactivate Product</h1>
</div>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card border-warning">
            <div class="card-header bg-warning bg-opacity-10">
                <h5 class="card-title mb-0 text-warning">Confirm Deactivation</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Are you sure you want to deactivate this product? This will make it unavailable for sale.</p>
                
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProductName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                </dl>
                
                <form asp-action="Deactivate">
                    <input type="hidden" asp-for="IdProductDetails" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-x-circle"></i> Deactivate Product
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>