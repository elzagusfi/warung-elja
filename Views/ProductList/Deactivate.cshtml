@model WarungElja.Models.ProductDetails

@{
    ViewData["Title"] = "Deactivate Product";
}

<h1>Deactivate Product</h1>

<h3>Are you sure you want to deactivate this product?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Deactivate">
        <input type="hidden" asp-for="IdProductDetails" />
        <input type="submit" value="Deactivate" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>