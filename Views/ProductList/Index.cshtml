@model IEnumerable<WarungElja.Models.ProductDetails>

@{
    ViewData["Title"] = "Product Management";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Product Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Product List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>Status</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="icon-circle bg-secondary text-white me-3">
                                            <i class="bi bi-box-seam"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@Html.DisplayFor(modelItem => item.ProductName)</div>
                                            <div class="small text-muted">ID: @item.IdProductDetails</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-bold">Rp @item.Price.ToString("N2", new System.Globalization.CultureInfo("id-ID"))</span>
                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var stock = item.ProductStocks.Any() ? item.ProductStocks.First().Stock : 0;
                                    }
                                    @if (stock > 10)
                                    {
                                        <span class="badge bg-success">@stock</span>
                                    }
                                    else if (stock > 0)
                                    {
                                        <span class="badge bg-warning text-dark">@stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@stock</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdProductDetails" class="btn btn-sm btn-outline-primary" title="Edit Price">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (item.Status == 1)
                                        {
                                            <a asp-action="Deactivate" asp-route-id="@item.IdProductDetails" class="btn btn-sm btn-outline-warning" title="Deactivate">
                                                <i class="bi bi-x-circle"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="Deactivated">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                        <a asp-action="StockUpdate" asp-route-id="@item.IdProductDetails" class="btn btn-sm btn-outline-info" title="Update Stock">
                                            <i class="bi bi-archive"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="icon-circle bg-light text-muted mx-auto mb-3">
                    <i class="bi bi-box-seam" style="font-size: 2rem;"></i>
                </div>
                <h4 class="text-muted">No products found</h4>
                <p class="mb-4">Get started by adding your first product.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Product
                </a>
            </div>
        }
    </div>
</div>