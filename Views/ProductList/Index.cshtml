@model IEnumerable<WarungElja.Models.ProductDetails>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Status
            </th>
            <th>
                Stock
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>
                <td>
                    @if (item.ProductStocks.Any())
                    {
                        @item.ProductStocks.First().Stock
                    }
                    else
                    {
                        <span>0</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProductDetails" class="btn btn-sm btn-outline-primary">Edit Price</a>
                    @if (item.Status == 1)
                    {
                        <a asp-action="Deactivate" asp-route-id="@item.IdProductDetails" class="btn btn-sm btn-outline-warning">Deactivate</a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-secondary" disabled>Deactivated</button>
                    }
                    <a asp-action="StockUpdate" asp-route-id="@item.IdProductDetails" class="btn btn-sm btn-outline-info">Update Stock</a>
                </td>
            </tr>
        }
    </tbody>
</table>