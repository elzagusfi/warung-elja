<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warung Elja</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WarungElja.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
</head>
<body>
    <!-- Header -->
    <header class="navbar navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <button class="btn btn-link text-light" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand" href="#">Warung Elja</a>
            <div class="dropdown">
                <button class="btn btn-link text-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" asp-controller="User" asp-action="Profile"><i class="bi bi-person me-2"></i> My Profile</a></li>
                    @if (User.IsInRole("Admin") || User.IsInRole("IT"))
                    {
                        <li><a class="dropdown-item" asp-controller="User" asp-action="Index"><i class="bi bi-people me-2"></i> User Management</a></li>
                    }
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i> Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <div class="img bg-wrap text-center py-4" style="background-image: url(/images/bg_1.jpg);">
                <div class="user-logo">
                    <div class="img" style="background-image: url(/images/navigation.png);"></div>
                    <h3>Warung Elja</h3>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-2"></i> Dashboard</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "ProductList" ? "active" : "")">
                    <a asp-controller="ProductList" asp-action="Index"><i class="bi bi-box-seam me-2"></i> Product List</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Cashier" ? "active" : "")">
                    <a asp-controller="Cashier" asp-action="Index"><i class="bi bi-cash-stack me-2"></i> Cashier</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "SalesReport" ? "active" : "")">
                    <a asp-controller="SalesReport" asp-action="Index"><i class="bi bi-graph-up me-2"></i> Sales Report</a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content" class="flex-grow-1">
            <div class="container-fluid p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    
    <footer class="footer text-muted border-top">
        <div class="container-fluid text-center">
            &copy; 2025 - Warung Elja
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('sidebar-collapsed');
            });
        });
    </script>
</body>
</html>
