@model IEnumerable<WarungElja.Models.SalesRecord>

@{
    ViewData["Title"] = "Sales Report";
}

<h1>Sales Report</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Quantity Sold
            </th>
            <th>
                Total Amount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaleDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDetails.ProductName)
                </td>
                <td>
                    Rp @item.Price.ToString("N2", new System.Globalization.CultureInfo("id-ID"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantitySold)
                </td>
                <td>
                    Rp @((item.Price * item.QuantitySold).ToString("N0", new System.Globalization.CultureInfo("id-ID")))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleDate)
                </td>
            </tr>
        }
    </tbody>
</table>